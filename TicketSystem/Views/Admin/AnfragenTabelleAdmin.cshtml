@{
    Layout = "_Eingeloggt";
}

@* hoho *@

@model MitarbeiterDaten

<div class="d-flex justify-content-between align-items-center ">
    <h3>Alle Tickets:</h3>
    <h1>Admin Seite</h1>
</div>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr class="text-center">
            <th>TicketId </th>
            <th>Kundenname</th>
            <th>Projekt Name</th>
            <th>Ansprechpartner</th>
            <th>Deadline</th>
            <th>Status</th>
            <th></th>
            <th>Nachricht</th>
            <th>Wer arbeitet?</th>
            <th>Kommentar</th>
            <th>Kommentar hinzufügen</th>
            <th>Löschen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Anfrage anfrage in AnfragenListe.anfragenListe)
        {
            <tr class="text-center">
                <td>@anfrage.Id</td>
                <td>@anfrage.KundenName</td>
                <td>@anfrage.ProjektName</td>
                <td>@anfrage.Ansprechpartner</td>
                <td>@anfrage.DeadLine.ToShortDateString()</td>
                @if (anfrage.Erledigt == true)
                {
                    <td>erledigt</td>
                }
                else
                {
                    <td>nicht erledigt</td>
                }
                <form asp-controller="Admin" asp-action="Erledigt" method="post">
                    <input type="hidden" name="id" value="@anfrage.Id" />
                    @if (anfrage.Erledigt == true)
                    {
                    <td>
                        <button type="submit" class="btn btn-warning w-100 h-100">zurücksetzen</button>
                    </td>
                    }
                    else
                    {
                    <td>
                        <button type="submit" class="btn btn-success w-100 h-100">Erledigt markieren</button>
                    </td>
                    }
                </form>
                <td>@anfrage.Nachricht</td>
                <td>@anfrage.Mitarbeiter</td>
                <td><a asp-controller="Admin" asp-action="Mitarbeiter" asp-route-Id="@anfrage.Id" value="">Mitarbeiter hinzufügen</a></td>
                <td class="text-center">
                    Kommentar: @anfrage.Kommentar <br />
                    Erstellt am: @anfrage.KommentarZeit<br />
                    Von: @anfrage.EingeloggterUser
                </td>
                <td><a asp-controller="Admin" asp-action="Kommentar" asp-route-Id="@anfrage.Id" value="">Kommentieren</a></td>
                <form asp-controller="Admin" asp-action="Löschen">
                    <input type="hidden" name="id" value="@anfrage.Id" />
                <td><button class="btn btn-danger">Löschen</button></td>
                </form>

            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary"><a class="text-light" asp-action="Index">Home</a></button>
<button class="btn btn-primary"><a class="text-light" asp-controller="Admin" asp-action="MitarbeiterTabelle">MA Tabelle</a></button>
<button class="btn btn-primary"><a class="text-light" asp-controller="Admin" asp-action="AddTicket">Anfrage Hinzufügen</a></button>
<button class="btn btn-primary"><a class="text-light" asp-controller="Admin" asp-action="SortierteAnfragenTabelle">Nach Projekt sortieren</a></button>
<button class="btn btn-primary"><a class="text-light" asp-controller="Admin" asp-action="SortierteAnfragenTabelleDatum">Nach Datum sortieren</a></button>