@{
    Layout = "_EingeloggtAdmin";
}
@model Anfrage

<form asp-action="Kommentar" method="post">
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Kommentar</span>
        <input type="text" class="form-control" aria-label="Kommentar" aria-describedby="inputGroup-sizing-sm" name="kommentar">
        <input type="hidden" name="VollerName" />
        <input type="hidden" name="KommentarZeit" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kommentieren</button>
    <button class="btn btn-primary mt-3"><a class="text-light" asp-controller="Admin" asp-action="AnfragenTabelleAdmin">Zurück zur Tabelle</a></button>
</form>

